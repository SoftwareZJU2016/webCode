- var title = '作业模块';
- var navIndex = 4;

doctype html
include components/head
.container
    include ../components/topbar
    include components/nav    
    .wrapper.col3
        #container
            #content(style='height: 350px;')
                h1 作业布置
                table#table(summary='Summary Here', cellpadding='0', cellspacing='0')
                    thead
                        tr
                            th 作业时间
                            th 作业名称
                            th 文件名称
                            th 上传时间
                            th 作业上传截止日期
                            th 操作
                    tbody
                        tr.light
                            td 第一周
                            td 用例图
                            td 1.pdf
                            td 2016.9.20
                            td 2016.10.20
                            td
                                a(href='', onclick='del()') 删除
                                a(href='') 修改
                        tr.dark
                            td 第二周
                            td 类图
                            td 2.pdf
                            td 2016.9.27
                            td 2016.10.20
                            td
                                a(href='') 删除
                                a(href='') 修改
                        tr.light
                            td 第三周
                            td 顺序图
                            td 3.pdf
                            td 2016.10.3
                            td 2016.10.20
                            td
                                a(href='') 删除
                                a(href='') 修改
                        tr.dark
                            td 第四周
                            td 协作图
                            td 4.pdf
                            td 2016.10.10
                            td 2016.10.20
                            td
                                a(href='') 删除
                                a(href='') 修改
                div(align='right')
                    a(href='homework_assign_addNew')
                        button(onclick='') 新增
                    script.
                        function addNew() {
                            var table=document.getElementById("table");
                            var newTr=table.insertRow(table.rows.length);
                            var td1=newTr.insertCell(0);
                            var td2=newTr.insertCell(1);
                            var td3=newTr.insertCell(2);
                            var td4=newTr.insertCell(3);
                            var td5=newTr.insertCell(4);
                            var td6=newTr.insertCell(5);
                            td1.innerHTML="<input style='width: 50px;'>";
                            td2.innerHTML="<input style='width: 50px;'>";
                            td3.innerHTML='<input type="file" style="width: 170px;">';
                            td4.innerHTML='<input type="date">';
                            td5.innerHTML='<input type="date">';
                            td6.innerHTML='<a href="">删除</a> <a href="">修改</a>'
                        }
            #column
                .subnav(style='position: fixed;')
                    h2 作业模块
                    ul
                        li
                            a(href='homework') 作业布置
                        li
                            a(href='homework_correct') 作业批改
                        li
                            a(href='homework_duplicate') 作业查重
            .clear
    include ../components/footer