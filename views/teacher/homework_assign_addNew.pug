- var title = '作业模块';
- var navIndex = 4;

doctype html
include components/head
.container
    include ../components/topbar
    include components/nav
    .wrapper.col3
        #container
            #content(style='height: 350px;')
                h1 作业布置
                table(summary='Summary Here', cellpadding='0', cellspacing='0')
                    thead
                        tr
                            th 作业时间
                            th 作业名称
                            th 文件名称
                            th 上传时间
                            th 作业上传截止日期
                    tbody
                        tr.light
                            td
                                input(style='width: 50px;')
                            td
                                input(style='width: 50px;')
                            td
                                input(type='file', style='width: 170px;')
                            td
                                input(type='date')
                            td
                                input(type='date')
                div(align='right')
                    a(href='homework_assign_addNew')
                        a(href='homework')
                            button 保存
            #column
                .subnav(style='position: fixed;')
                    h2 作业模块
                    ul
                        li
                            a(href='homework') 作业布置
                        li
                            a(href='homework_correct') 作业批改
                        li
                            a(href='homework_duplicate') 作业查重
            .clear
    include ../components/footer