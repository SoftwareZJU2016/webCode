- var title = '游客反馈';
- var navIndex = 3;

doctype html
include components/head
.container
    include ../components/topbar
    include components/nav

    .wrapper.col3
        #container
            #content

                each item in feedbacks
                    article.format-standard.type-post.hentry.clearfix
                        header.clearfix
                            h3.post-title
                                a(href='visitorFeedback/'+item.id)= item.title
                            .post-meta.clearfix
                                span 反馈类型显示在这里
                                span= (item.status == 1) ? '已解决' : '未解决'
                                input#submit(name='submit', type='submit', style='visibility:'+((item.status == 1)? 'hidden;' : 'visible;'), value='设为已解决')
                        p!= item.content.substr(0, 50)
                            | ...
                            a.readmore-link(href='visitorFeedback/'+item.id) Read more
                
                #pagination
                    //TODO
                    a.btn.active(href='#') 1
                    a.btn(href='#') 2
                    a.btn(href='#') 3
                    a.btn(href='#') Next »
                    a.btn(href='#') Last »
            #column
                .subnav(style='position: fixed')
                    h2 游客反馈
                    ul
                        li
                            a(href='visitorFeedback') 反馈列表
            .clear
    include ../components/footer
